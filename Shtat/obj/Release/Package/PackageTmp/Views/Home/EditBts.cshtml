@model Shtat.Models.BazTarStavka

<div class="modal-header">
    <h5> Редактирование БТС</h5>
</div>
<div class="modal-body">
    <label>Группа</label>
    <input type="text" class="form-control btn-block" id="gruppa" value="@Model.Gruppa" />

    <label>БТС</label>
    <input type="text" class="form-control btn-block" id="bts" value="@Model.Stavka" />

    <label>Дата ввода</label>
    <input type="text" class="form-control btn-block" id="datvvoda" value="@Model.Datein" />

    <label>Дата закрытия</label>
    <input type="text" class="form-control btn-block" id="datzak" value="@Model.Dateout" />

</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-success" style="min-width:100px" onclick="BtsSave(@Model.IDStavka)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>