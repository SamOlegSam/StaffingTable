@model Shtat.Models.Doljnost

<div class="modal-header">
    <h5> Редактирование должности</h5>
</div>
<div class="modal-body">
    <label>Должность</label>
    <input type="text" class="form-control btn-block" id="doljnost" value="@Model.Doljnost1" />

    <label>Дата ввода</label>
    <input type="text" class="form-control btn-block" id="datvvoda" value="@Model.Datein" />

    <label>Дата закрытия</label>
    <input type="text" class="form-control btn-block" id="datzak" value="@Model.Dateout" />

</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-success" style="min-width:100px" onclick="DoljSave(@Model.IDDolj)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>
